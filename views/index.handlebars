<div id="home">
  <div class="container bg-dark">
    <div class="row">
      <div class="col-10 offset-1">

        {{!-- {{#each notes}} --}}
        <div class="row">
          <div class="col-3"></div>
          <div class="col-9">
            <div class="note">

              <ul id="notesUl" class="list-group ">
                <div class="border bg-light m-1 text-justify">
                  <div class="m-1">
                    {{!-- <li><b>Title:</b> {{this.nHead}}</li> --}}
                    <li><b>Notes:</b> {{this.nBody}}</li>
                  </div>
              </ul>
              {{!-- {{/each}} --}}

            </div>
            <div class="noteAdd">
              <form class="clearfix" action="POST">

                <div class="col-4"></div>
                <div class="col">

                  <textarea class="form-control " id="note-description" aria-describedby="note-description"
                    placeholder="Add a New Note"></textarea>
                </div>
                <div class="col-4"></div>

                <div class="row">
                  <div class="col "></div>
                  <div class="col offset-1">

                    <button id="submit" class="btn btn-primary">Submit</button>
                    <button class="btn btn-danger delete">Remove</button>
                  </div>

              </form>
            </div>

          </div>
        </div>
      </div>


      <div class="row bg-secondary mt-2 mb-2">
        <div class="col-12 text-center text-light">
          <h2><b>Articles</b></h2>
        </div>
      </div>
      <ul id="articlesUl" class="list-group ">

        {{#each articles}}
        <div class="border bg-light m-1 text-justify">
          <div class="m-2">
            <li><b>Headline:</b> {{this.aText}}</li>
            <li><b>Summary:</b> {{this.aSummary}}</li>
            <li><b></b> <a href="{{this.aUrl}}">Link to Story</a></li>
            <li><b>ID: </b> {{this.id}}</li>
          </div>
        </div>
        <p class="bg-white"></p>
        {{/each}}

      </ul>


    </div>
  </div>
</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>